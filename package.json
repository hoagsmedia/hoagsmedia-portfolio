		"bits-ui": "^2.4.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.40.0",
		"formsnap": "^2.0.1",
		"lucide-svelte": "^0.513.0",
		"paneforge": "1.0.0-next.5",
		"svelte-sonner": "^1.0.4",
		"svelte-toolbelt": "^0.9.1",
		"tailwind-merge": "^3.3.0",
		"vaul-svelte": "1.0.0-next.7",
		"zod": "^3.25.51"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
