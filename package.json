{
	"name": "hoagsmedia",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "pnpm run test:unit -- --run && pnpm run test:e2e",
		"test:e2e": "playwright test",
		"db:push": "drizzle-kit push",
		"db:migrate-old": "drizzle-kit migrate",
		"db:migrate": "tsx ./src/lib/server/db/migrate.ts",
		"db:studio": "drizzle-kit studio",
		"db:seed-old": "tsx scripts/seed.ts",
		"db:seed": "tsx ./scripts/seed.ts",
		"db:generate": "drizzle-kit generate --dialect=postgresql --schema=src/lib/server/db/schema.ts --out=./drizzle",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@internationalized/date": "^3.5.6",
		"@lucide/svelte": "^0.511.0",
		"@playwright/test": "^1.49.1",
		"@storybook/addon-a11y": "^9.0.4",
		"@storybook/addon-docs": "^9.0.4",
		"@storybook/addon-svelte-csf": "^5.0.3",
		"@storybook/addon-vitest": "^9.0.4",
		"@storybook/sveltekit": "^9.0.4",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@types/node": "^22",
		"dotenv": "^16.5.0",
		"drizzle-kit": "^0.30.2",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-storybook": "^9.0.4",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"mdsvex": "^0.12.3",
		"mode-watcher": "1.0.7",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"storybook": "^9.0.4",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"sveltekit-superforms": "^2.19.1",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.0.0",
		"tsx": "^4.19.4",
		"tw-animate-css": "^1.3.4",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6",
		"vitest": "^3.0.0"
	},
	"dependencies": {
		"@inlang/paraglide-js": "^2.0.0",
